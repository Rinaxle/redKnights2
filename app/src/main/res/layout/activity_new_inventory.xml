<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewInventoryActivity"
    android:background="@color/pink"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Inventory"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/inventoryBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Branch"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <TextClock
        android:id="@+id/paymentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="date"
        android:gravity="center"/>

    <TextView
        android:id="@+id/inventoryCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Inventory code"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/item_text_input"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="50dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/item_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Item"
                    android:inputType="textMultiLine|text"
                    android:textColorHighlight="@color/bgColor"
                    android:textColorLink="@color/bgColor" />

            </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/quantity_text_input"
                style="@style/TextInputLayout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/quantity_edit_text"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:hint="Quantity"
                    android:inputType="datetime"
                    android:textColorHighlight="@color/bgColor"
                    android:textColorLink="@color/bgColor" />

            </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/itemType_spinner"
        android:layout_width="150dp"
        android:layout_height="match_parent"></Spinner>

</LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/itemAmount_text_input"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemAmount_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Item Amount"
                    android:inputType="number"
                    android:textColorHighlight="@color/bgColor"
                    android:textColorLink="@color/bgColor" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/staff_text_input"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/staff_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Name of Staff"
                    android:inputType="text"
                    android:textColorHighlight="@color/bgColor"
                    android:textColorLink="@color/bgColor" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/addInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/pink"
                android:text="Add to Inventory" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>